<% skip_if_logged_in %>
<div class="row">
<%= form_tag 'sessions/create', method: :post, class: "sign-in-form col-xs-4 col-xs-offset-4" do %>
  <div class="form-group">
      <%= text_field_tag "email", nil, class: "form-control", placeholder: "youremail@domain.com" %>
  </div>
  <div class="form-group">
      <%= password_field_tag "password", nil, class: "form-control", placeholder: "password" %>
  </div>
  <div class="form-group">
      <%= submit_tag "Login", class: "form-submit btn btn-block btn-primary" %>
  </div>
  <% end %>
</div>